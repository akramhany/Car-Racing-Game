


RESETCAR1 PROC FAR
CMP STATE1 , 0      
JNZ RESETCAR1_RIGHT
;PERFORM EQUATION CENTER-(WIDTH/2)-(320*HEIGHT/2) TO GET TOP LEFT POINT OF THE CAR (TOP LEFT IN THE SCREEN)
;CALCULATE (320*HEIGHT/2) TERM
MOV BX,320          
MOV AX,HEIGHT1
shr AX,1
MUL BX
PUSH AX

;CALCULATE WIDTH/2 TERM
MOV AX , WIDTH1
shr AX,1

;GET THE REQUIRED POINT
MOV BX , CENTER1
SUB BX ,AX
POP AX
SUB BX,AX

PUSH BX

MOV AX,BX
MOV DX,HEIGHT1  
MOV SI,OFFSET PIXELS1

RESETCAR1_UPROW:
MOV DI,AX
MOV CX,WIDTH1


RESETCAR1_LOOP1:
MOV AL,[SI]
STOSB
INC SI
LOOP RESETCAR1_LOOP1

POP AX
ADD AX,320      ; MOVE TO THE NEXT ROW
PUSH AX
DEC DX          
CMP DX , 0
JNZ RESETCAR1_UPROW
POP AX
JMP RESETCAR1_EXIT



